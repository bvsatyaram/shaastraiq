<% title "Log in" %>

<% form_for @user_session do |form| %>
  <%= form.error_messages %>
      <%= form.label :username, "Username" %>
      <%= form.text_field :username, :class => "" %>

      <%= form.label :password, "Password" %>
      <%= form.password_field :password %>
      <%= form.submit "Login", :class => "button" %>
<% end %>